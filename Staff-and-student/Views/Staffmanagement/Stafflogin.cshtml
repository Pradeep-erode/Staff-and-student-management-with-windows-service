<div class="container">
    @model staffstudent.Core.staffEntity.Staffcheck
    @{
        ViewData["Title"] = "Stafflogin";
        <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    }
    @section Scripts
    {
        <partial name="_ValidationScriptsPartial">
    }
    <script src="~/js/site.js"></script>
    <h5>Stafflogin</h5>

    <body>
        <div class="container">
            <div class="row vertical-offset-100">
                <div class="col-md-4 col-md-offset-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                        </div>
                        <div class="panel-body">
                            <fieldset>
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @using (Html.BeginForm("Stafflogin", "Staffmanagement", FormMethod.Post, new { id = "stafflogin" }))
                                {
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.Name, new { @id = "admin", @class = "form-control", placeholder = "Username" })
                                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        @Html.PasswordFor(m => m.password, new { @class = "form-control", placeholder = "Password" })
                                        @Html.ValidationMessageFor(m => m.password, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" onclick="StaffDetails()" class="btn-block btn btn-lg btn-success" id="btnsubmit">Login</button>
                                    </div>
                                }
                            </fieldset>
                            @Html.ActionLink("Back-to main login", "Mainpage", "Staffmanagement", new { }, new { @class = "btn btn-primary btn-lg" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
    @if (ViewBag.Credentials != null)
    {
        <script>
   alert("@Html.Raw(@ViewBag.Credentials.ToString())");
        </script>
    }
</div>


