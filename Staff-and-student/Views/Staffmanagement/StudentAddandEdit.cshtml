@model staffstudent.Core.staffEntity.StudentInformationEntity
@{
    ViewData["Title"] = "StudentAddandEdit";
}
@section Scripts
    {
    <partial name="_ValidationScriptsPartial">
}
<script src="~/js/site.js"></script>

<div class="container">
    <h5>Student Information</h5>
    <div>
        @Html.ActionLink("Back-to-dashboard", "Studentdashboard", "Staffmanagement", new { }, new { @class = "btn btn-primary btn-lg" })
    </div>
    <hr />
    <div class="">
        <div class="">
            <div class="form-group">
                @using (Html.BeginForm("StudentdetailAdd", "Staffmanagement", FormMethod.Post, new { id = "validatestudent" }))
                {
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <label>Roll no<span>*</span></label>
                                @Html.TextBoxFor(m => m.StudentRollNo, new { @id = "Rollnum", @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Password<span>*</span></label>
                                @Html.TextBoxFor(m => m.Password, "", new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Student First name<span>*</span></label>
                                @Html.TextBoxFor(m => m.StudentFirstName, "", new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Student Last name<span>*</span></label>
                                @Html.TextBoxFor(m => m.StudentLastName, "", new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Gender<span>*</span></label>
                                <div>
                                    <label>Male</label>
                                    @Html.RadioButtonFor(m => m.Gender, "Male")
                                    <label>Female</label>
                                    @Html.RadioButtonFor(m => m.Gender, "Female")
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Date of birth<span>*</span></label>
                                @Html.EditorFor(m => m.Dob, new { @class = "form-control", type = "date" })
                            </div>
                            <div class="form-group">
                                <label>Father First name<span>*</span></label>
                                @Html.TextBoxFor(m => m.FatherFirstName, "", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label>Father last name<span>*</span></label>
                                @Html.TextBoxFor(m => m.FatherLastName, "", new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Mother First name<span>*</span></label>
                                @Html.TextBoxFor(m => m.MotherFirstName, "", new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Mother last name<span>*</span></label>
                                @Html.TextBoxFor(m => m.MotherLastName, "", new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Email<span>*</span></label>
                                @Html.TextBoxFor(m => m.Email, "", new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Student contact no<span>*</span></label>
                                @Html.TextBoxFor(m => m.StudentContactNo, "", new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Fathers contact no<span>*</span></label>
                                @Html.TextBoxFor(m => m.FatherSContactNo, "", new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Fathers occupation<span>*</span></label>
                                @Html.TextBoxFor(m => m.FatherSOccupation, "", new { @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    if (Model.StudentRollNo > 0)
                    {
                        <button type="submit" onclick="SubmitDetails()" class="btn btn-default btn-lg btn-block btn-success" id="updatespin" style="display:block">Update</button>
                        @*for spinning==<button class="spin btn btn-lg btn-success btn-block" style="display:none">
                                update<span class="spinner-border spinner-border-sm"></span>
                            </button>*@
                    }
                    else
                    {
                        <button type="submit" onclick="SubmitDetails()" class="btn btn-default btn-lg btn-block btn-success" id="btnsubmita">Submit</button>
                    }
                    <button type="reset" class="btn btn-default btn-lg btn-block btn-warning">Reset</button>
                }
            </div>
        </div>
    </div>

    </div>
